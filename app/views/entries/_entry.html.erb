<% present entry do |entry_presenter| %>
<li class="<%= entry_presenter.classes %>" data-entry-id="<%= entry.id %>">
    <%= entry_presenter.entry_link do %>
      <%= entry_presenter.favicon %>
      <span class="state-indicators">
        <i class="icon-star-filled"></i>
      </span>
      <time datetime="<%= entry_presenter.datetime %>" class="time"><%= entry_presenter.published_date %></time>
      <h2 class="title" <%= rtl(entry_presenter.title) %>><%= entry_presenter.title %></h2>
      <p class="feed-title" data-behavior="user_title" data-feed-id="<%= entry.feed.id %>"><%= entry.feed.title %></p>
      <% if entry_presenter.has_content? %>
        <p class="body" <%= rtl(entry.summary) %>><%= entry.summary.html_safe %></p>
      <% end %>
    <% end %>
  </li>
<% end %>