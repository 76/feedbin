<tr>
  <td rowspan="2" width="150">
    <label class="checkbox">
      <% if f.object.feed_ids.any? %>
        <input type="checkbox" name="include_all" data-behavior="check_feeds">
      <% else %>
        <input type="checkbox" name="include_all" checked="checked" data-behavior="check_feeds">
      <% end %>
      Include all Feeds
    </label>
    <div class="feed-ids <%= 'hide' unless f.object.feed_ids.any? %>">
      <%=
        f.collection_check_boxes(:feed_ids, @user.feeds.include_user_title, :string_id, :title) do |b|
          b.label(class: "checkbox") { b.check_box + b.text }
        end
      %>
    </div>
  </td>
  <td><%= f.search_field :query %></td>
  <td class="action">
    <%= f.hidden_field :id %>
    <%= f.hidden_field :_destroy %>
    <%= link_to 'Delete', '#', class: 'button button-mini button-text button-danger', data: {behavior: 'remove_fields'} %>
  </td>
</tr>
<tr>
  <td colspan="2">
    <%=
      f.collection_check_boxes(:actions, ['Mark as Read', 'Star', 'Send Push Notification'], :to_s, :to_s) do |b|
        b.label(class: "checkbox") { b.check_box + b.text }
      end
    %>
  </td>
</tr>
